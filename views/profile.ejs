    <% include ./partials/navbar %>

   <!-- Section -->
      <section>
          <div class = "container">
              <div class = "row">
                  <div class = "col-md-8">
                      <div class="profile">
                          <h1 class="page-header"><%= userFullname %></h1>
                          <div class="row">
                              <div class="col-md-4 user-profile-image">
                                  <img src="<%= userImage %>" class="img-thumbnail">
                              </div>

                              <div class="col-md-8 user-details">
                                  <ul>
                                      <li><strong>Name: </strong><%= userFullname %></li>
                                      <li><strong>Email Address: </strong><%= userEmail %></li>
                                  </ul>



                              </div> <!-- ENDof Col-md-8 -->

                          </div> <!-- ENDof row -->

                          <br><br>

                          <div class = "row">
                              <div class = "col-md-12">
                                      <!-- Profile Wall -->
                                     <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title">Wall</h3>
                                        </div>
                                        <div class="panel-body">
                                            <form>
                                                <div class="form-group">
                                                    <textarea type="text" id="postText" class="form-control"  placeholder="Write on the wall"></textarea>
                                                </div>
                                                <button type="submit" class="btn btn-default">Submit</button>

                                                <div class = "pull-right">
                                                    <div class="upload icons-wrapper">
                                                         <div class="upload-btn">
                                                                <input type="file" id="images" name = "uploadImages" class="btn btn-primary" accept=".jpg, .jpeg, .png" multiple="multiple"/>
                                                        </div> 
                                                    </div>
                                                </div>

                                            </form>
                                        </div>
                                    </div> <!-- ENDof panel panel-default -->
                              </div> <!-- ENDof Col-MD-12 -->
                          </div> <!-- ENDof Row -->

                      </div> <!-- ENDof Profile -->

                  </div> <!-- ENDof Col-md-8 -->

                   <div class = "col-md-4">

                    <div class="panel panel-default friends">
                      <div class="panel-heading">
                        <h3 class="panel-title">My Friends</h3>
                      </div>
                      <div class="panel-body">
                        <ul>
                            <li><a class = "thumbnail" href = "profile.html"><img src = "../../img/user.png"></a>
                            </li>
                             <li><a class = "thumbnail" href = "profile.html"><img src = "../../img/user.png"></a>
