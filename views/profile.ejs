                                <!-- Profile Wall -->
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Wall</h3>
                                    </div>
                                    <div class="panel-body">
                                        <form>
                                            <div class="form-group">
                                                <textarea type="text" id="postText" class="form-control"  placeholder="Write on the wall"></textarea>
                                            </div>
                                            <div style="display: inblock; width:20%; float:left;">
                                                <button type="submit" class="btn btn-default">Submit</button>
                                            </div>
                                            <div style="display: inblock; width:20%; float:left;">
                                                <input type="checkbox" id="privateCheckBox" class="checkbox" name="privateCheckBox" value="checked">Private</input> 
                                            </div>      
                                            <div class = "pull-right">
                                                <label class="btn btn-primary" style="width: 100%;">
                                                    Upload Images <input type="file" id="images" name="uploadImages" class="btn btn-primary" accept=".jpg, .jpeg, .png" multiple="multiple" hidden>
                                                </label>
                                                <!--<input type="file" id="images" name = "uploadImages" class="btn btn-primary" accept=".jpg, .jpeg, .png" multiple="multiple"/>-->
                                                <div id="preview"></div>
                                             </div>
                                        </form>
                                    </div>   
                                </div> <!-- ENDof panel panel-default -->

                                <!-- Posts -->
                                <div id="postsPlaceHolder">
                                </div> <!-- ENDof panel panel-default post -->

                            </div> <!-- ENDof Col-MD-12 -->
                        </div> <!-- ENDof Row -->
                    </div> <!-- ENDof Profile -->
                </div> <!-- ENDof Col-md-8 -->


                



