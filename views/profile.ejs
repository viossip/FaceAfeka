    <section>
        <div class = "container">
            <div class = "row">
                <div class = "col-md-8">
                    <div class="profile">
                        <h1 class="page-header"><%= userFullname %></h1>
                        <div class="row">
                            <div class="col-sm-4 user-profile-image">
                                <img src="<%= userImage %>" class="img-thumbnail">
                            </div>

                            <div class="col-sm-8 user-details">
                                <ul>
                                    <li id="li_userId"><strong>ID: </strong><%= userId %></li>
                                    <li id="li_userFullname"><strong>Name: </strong><%= userFullname %></li>
                                    <li id="li_userEmail"><strong>Email Address: </strong><%= userEmail %></li>
                                </ul>
                            </div> <!-- ENDof Col-md-8 -->
                        </div> <!-- ENDof row -->
                        <div class="row" style="margin-top: 10px;">
                            <div class="col-sm-4">
                                <label class="btn btn-primary change-image-label" style="width: 100%;">
                                    Change Image <input type="file" class="change-image-input" accept=".jpg, .jpeg, .png" hidden>
                                </label>
                            </div>
                            <div class="col-sm-8">

                            </div>
                        </div>
                        <br><br>
                            
                        <div class = "row">
